<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="rdo_scanner_view.CustomBarcodeScanner">
  <xpath expr="//div[@class='barcode_scanner']" position="replace">
        <div class="o_barcode_mobile_container my-4">
            <a t-if="isBarcodeScannerSupported" role="button" class="btn btn-primary o_mobile_barcode" style="text-justify: center;" t-on-click="openMobileScanner">
                    <i class="fa fa-camera fa-2x o_barcode_mobile_camera"/>
                    Tap to scan
            </a>
            <img src="/barcodes/static/img/barcode.png" alt="Barcode"/>
            <span class="o_barcode_laser"/>
        </div>
    </xpath>
</t>

</templates>
